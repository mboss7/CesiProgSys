<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplicationVIEW.MainWindow"
        Title="AvaloniaApplicationVIEW" DataContext="{Binding MainWindowViewModel}">
	<Grid RowDefinitions="Auto, *, Auto">
		<Grid Grid.Row="0" Background="Green" Height="60" ColumnDefinitions="Auto, *, Auto, Auto">
			<Rectangle Grid.Column="0"></Rectangle>
			<Rectangle Grid.Column="1"></Rectangle>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
				<Label FontWeight="Black">EASY SAVE</Label>
				<Button Width="160" Click="Connection">ConnectToServer</Button>
				<Button Width="160" Click="Send">SendText</Button>
			</StackPanel>
		</Grid>
	</Grid>
</Window>