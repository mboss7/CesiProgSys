<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ViewAvalonia.Views"
        xmlns:vm="using:ViewAvalonia.Views"
        x:Class="ViewAvalonia.Views.NewBackup">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>	
    
        <Grid IsVisible="{Binding !Visible}">
            <StackPanel >
                <StackPanel >
                    <TextBox Name="NameTextBox" Watermark="Nom" Text="{Binding Name}" />
                </StackPanel>
                <StackPanel>
                    <TextBox Name="SourceTextBox" Watermark=" Fichier Source" Text="{Binding Source}"/>
                    <Button Name="SourceBrowseButton" Content="📁" />
                </StackPanel>
                <StackPanel>
                    <TextBox Name="DestinationTextBox" Watermark="Fichier Destination" Text="{Binding Target}"/>
                    <Button Name="DestinationBrowseButton" Content="📁" />
                </StackPanel>
                <StackPanel>
                    <ComboBox Name="Typeofbackup" Margin="0,0,0,8" Width="300" Items="{Binding ListTypeBackup}" SelectedItem="{Binding TypeBackup}"/>
                </StackPanel>
                <Button Name="ExitButton" Content="Quitter ❌" Command="{Binding leaveNewBackup}"/>
                <Button Name="ApplyButton" Content="Appliquer 💾" Command="{Binding addNewBackup}"/>
            </StackPanel>
        </Grid>
</UserControl>