<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:ViewAvalonia.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="ViewAvalonia.Views.Header">
        
        <Design.DataContext>
                <vm:HeaderViewModel/>
        </Design.DataContext>
        
        <Grid Classes="Header" ColumnDefinitions="Auto, *, Auto">
                <StackPanel Margin="100 0 -80 0 " Grid.Column="1">
                        <Label>EASY SAVE</Label>
                </StackPanel>
                <StackPanel Margin="0 0 80 0" Grid.Column="2">
                        <ComboBox Items="{Binding Languages}" SelectedItem="{Binding Language}"/>
                </StackPanel>
        </Grid>
</UserControl>
